{
  "manifest_version": 2,
  "name": "Close Tab",
  "version": "1.0.0",

  "description": "Closes the current tab.",

  "applications": {
    "gecko": {
      "id": "{040333a9-ed9c-4225-992b-7396fa1aee23}"
    }
  },

  "icons": {
    "48": "icons/close.svg",
    "96": "icons/close.svg"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/close.svg",
    "theme_icons": [{
      "dark": "icons/close.svg",
      "light": "icons/close-light.png",
      "size": 19
    }]
  },

  "permissions": [
    "tabs",
    "theme"
  ]
}
